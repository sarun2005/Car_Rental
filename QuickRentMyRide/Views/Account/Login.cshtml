@model QuickRentMyRide.DTOs.LoginDto

@{
    ViewData["Title"] = "Login";
}



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4">Login</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"><i class="fas fa-lock me-2"></i>Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3 text-end">
                <a href="#" class="small text-decoration-none">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3"
                    style="background: linear-gradient(to right, #4dd0e1, #ba68c8); border: none;">
                LOGIN
            </button>
        </form>



        <!-- Social Logins -->
        <div class="text-center mb-2">
            <span class="text-muted">Or Login Using</span>
        </div>

        <div class="d-flex justify-content-center gap-3 mb-3">
            <a asp-controller="Account" asp-action="LoginWithFacebook" class="btn btn-outline-info rounded-circle"><i class="fab fa-facebook-f"></i></a> <!-- Facebook -->
            <a asp-controller="Account" asp-action="LoginWithGoogle" class="btn btn-outline-info rounded-circle"><i class="fab fa-google"></i></a>   <!-- Google -->
        </div>

        <!-- Sign up link -->
        <div class="text-center">
            <span class="text-muted">Don't have an account? <a asp-action="Register" class="fw-bold text-decoration-none">Sign Up</a></span>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
