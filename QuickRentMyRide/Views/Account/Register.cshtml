@model QuickRentMyRide.Models.Customer
@{
    ViewData["Title"] = "Register";
}


@if (TempData["LoginError"] != null)
{
    <div class="alert alert-danger">@TempData["LoginError"]</div>
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4">Register</h3>

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="Full_Name" class="form-label"><i class="bi bi-person"></i> Full Name </label>
                <input asp-for="Full_Name" class="form-control" placeholder="Enter your full name" />
                <span asp-validation-for="Full_Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IC_Number" class="form-label"><i class="bi bi-person-bounding-box"></i> IC </label>
                <input asp-for="IC_Number" class="form-control" placeholder="Enter your IC number" />
                <span asp-validation-for="IC_Number" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"><i class="fas fa-lock me-2"></i>Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3">Register</button>
        </form>

        <div class="text-center">
            <span class="text-muted">Already have an account? <a asp-action="Login" class="fw-bold text-decoration-none">Login</a></span>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
